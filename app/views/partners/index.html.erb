<% content_for(:title, 'パートナー一覧') %>

<header class="primary-header d-flex align-items-center">
  <div>
    <h1 class="mb-0">パートナー一覧</h1>
  </div>

  <div class="d-flex ml-auto">
    <%= link_to t('common.new'), new_partner_path, class: 'btn btn-m default before-icon plus' %>
  </div>
</header><!-- .primary-header -->
<div class="secondary-header">
  
</div><!-- .secondary-header -->

<main class="main-contents">
  
  <div class="table-wrap sp-none">
    <table class="border-table">
      <thead>
        <tr>
          <td>会社名</td>
          <td>サービス連携</td>
          <td>階層</td>
          <td>上位店</td>
          <td>ベンダー</td>
        </tr>
      </thead>
      <tbody>
        <% @partners.each do |partner| %>
          <tr>
            <td><%= link_to partner.name, partner_path(uid: partner.uid) %></td>
            <td>
              <% if partner.company.present? %>
                <%= image_tag partner.company.decorate.thumbnail, class: 'icon-image mr-3' %>
                <%= partner.company.name %>
              <% else %>
                <span>未連携</span>
              <% end %>
            </td>
            <td><%= partner.hierarchy_i18n %></td>
            <td><%= partner&.parent&.name %></td>
            <td><%= partner.vendor_group.vendor.name %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div><!-- .table-wrap -->

</main><!-- .main-contents -->