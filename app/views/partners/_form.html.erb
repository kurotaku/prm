<div class="form-group">
  <p><%= f.label :name %></p>
  	<%= f.text_field :name, class: 'form-control half' %>
</div>

<div class="form-group">
  <p><%= f.label :parent_id %></p>
  <div class="select-wrap">
    <%= f.collection_select :parent_id, @current_vendor_group.partners.all, :id, :name, {include_blank: '---'},{class: 'form-control'} %>
  </div>
</div>

<div class="form-group">
  <p class="mb-1"><%= f.label :hierarchy %></p>
  <div class="select-wrap half">
    <%= f.select :hierarchy, Company.hierarchies_i18n.invert.to_a, {}, {class: 'form-control'} %>
  </div>
</div>

<div class="form-group">
  <p><%= f.label :address %></p>
  <%= f.text_field :address, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :vendor_memo %>
  <%= f.text_area :vendor_memo, class: 'form-control', placeholder: "ベンダーのみが閲覧できるメモです".html_safe, rows: 6 %>
</div>