<% content_for(:title, '商品詳細') %>

<header class="primary-header d-flex align-items-center">
  <%= render 'products/show_parts/header' %>
</header><!-- .primary-header -->
<div class="secondary-header">
  <%#= render 'products/show_parts/page_menu' %>
</div><!-- .secondary-header -->

<main class="main-contents">
  <div class="contents-box">
    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.code' %></dt>
      <dd><%= @product.code %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.name' %></dt>
      <dd><%= @product.name %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.agency_price' %></dt>
      <dd><%= @product.agency_price %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.agency_incentive' %></dt>
      <dd><%= @product.agency_incentive %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.agency_description' %></dt>
      <dd><%= @product.agency_description %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.introduction_price' %></dt>
      <dd><%= @product.introduction_price %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.introduction_incentive' %></dt>
      <dd><%= @product.introduction_incentive %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.introduction_description' %></dt>
      <dd><%= @product.introduction_description %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.wholesale_price' %></dt>
      <dd><%= @product.wholesale_price %></dd>
    </dl>

    <dl class="definition-list">
      <dt><%= t 'activerecord.attributes.product.wholesale_description' %></dt>
      <dd><%= @product.wholesale_description %></dd>
    </dl>

  </div>

</main><!-- .main-contents -->
