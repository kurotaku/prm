<header class="primary-header d-flex align-items-center">
  <div>
    <h1>企業一覧</h1>
    <p class="mb-0">企業一覧です</p>
  </div>

  <div class="d-flex ml-auto">
    <%= link_to t('common.new'), new_admin_page_company_path, class: 'btn btn-m default before-icon plus' %>
  </div>
</header><!-- .primary-header -->
<div class="secondary-header">
</div><!-- .secondary-header -->

<main class="main-contents">

  <div class="d-flex sp-none mb-3">
    <div class="text-sl">表示件数:<%= @companies.total_count %>件</div>
    <%= paginate @companies %>
  </div>

  <div class="table-wrap">
    <table class="border-table">
      <thead>
        <tr>
          <td><%= t('activerecord.attributes.company.name') %></td>
          <td>ユーザー数</td>
          <td>作成日</td>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td>
              <%= link_to admin_page_company_path(company) do %>
                <%= image_tag company.decorate.thumbnail, class: 'thumb' %>
                <%= company.name %>
              <% end %>
            </td>
            <td><%= company.users.count %></td>
            <td><%= company.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- .table-wrap -->

</main><!-- .main-contents -->
