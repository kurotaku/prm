<% content_for(:title, '商談一覧') %>

<header class="primary-header d-flex align-items-center">
  <div>
    <h1 class="mb-0">商談一覧</h1>
  </div>

  <div class="d-flex ml-auto">
    <%= link_to t('common.new'), new_lead_path, class: 'btn btn-m default before-icon plus' %>
  </div>
</header><!-- .primary-header -->

<div class="secondary-header">
</div><!-- .secondary-header -->

<main class="main-contents">
  
  <div class="table-wrap">
    <table class="border-table">
      <thead>
        <tr>
          <% @current_vendor_group.lead_columns.where.not(index_page_order: nil).order(index_page_order: 'ASC').each do |index_column| %>
            <td><%= index_column.name %></td>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @leads.each do |lead| %>
          <tr>
            <% lead.index_cache.each do |key, value| %>
              <td><%= value %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- .table-wrap -->

</main><!-- .main-contents -->