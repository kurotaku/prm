<% content_for(:title, 'メーカー - ファイル管理') %>

<header class="primary-header d-flex align-items-center">
  <div>
    <h1>ファイル一覧</h1>
    <p class="mb-0">ファイルをアップしてパートナーに共有できます</p>
  </div>

  <div class="d-flex ml-auto">
    <%= link_to t('common.new'), new_maker_page_file_path, class: 'btn btn-m default before-icon plus' %>
  </div>
</header><!-- .primary-header -->
<div class="secondary-header">
</div><!-- .secondary-header -->

<main class="main-contents">

  <div class="d-flex sp-none mb-3">
    <div class="text-sl">表示件数:<%= @files.total_count %>件</div>
    <%= paginate @files %>
  </div>

  <div class="table-wrap">
    <table class="border-table">
      <thead>
        <tr>
          <td><%= t('activerecord.attributes.shared_file.name') %></td>
          <td><%= t('activerecord.attributes.shared_file.user_full_name') %></td>
          <td><%= t('activerecord.attributes.shared_file.created_at') %></td>
        </tr>
      </thead>
      <tbody>
        <% @files.each do |file| %>
          <tr>
            <td>
              <%= link_to maker_page_file_path(uid: file.uid) do %>
                <%= file.name %>
              <% end %>
            </td>
            <td>
              <%= image_tag file.user.decorate.thumbnail, class: 'thumb' %>
              <%= file.user.name %>
            </td>
            <td><%= file.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= link_to t('common.download'), download_maker_page_file_path(uid: file.uid) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- .table-wrap -->

</main><!-- .main-contents -->
