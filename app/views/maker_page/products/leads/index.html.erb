<% content_for(:title, 'メーカー - 案件一覧') %>

<header class="primary-header d-flex align-items-center">
  <div>
    <h1 class="mb-0"><%= @product.name %></h1>
  </div>

  <div class="d-flex ml-auto">
    <%= link_to t('common.new'), new_admin_page_user_path, class: 'btn btn-m default before-icon plus' %>
  </div>
</header><!-- .primary-header -->
<div class="secondary-header">
  <%= render 'maker_page/products/show_parts/page_menu' %>
</div><!-- .secondary-header -->

<main class="main-contents">
  
  <div class="table-wrap sp-none">
    <table class="border-table">
      <thead>
        <tr>
          <% @product.index_columns.order(order: 'ASC').each do |index_column| %>
            <td><%= index_column.name %></td>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @leads.each do |lead| %>
          <tr>
            <% lead.index_cache.each do |key, value| %>
              <td><%= value %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- .table-wrap -->

</main><!-- .main-contents -->