<% content_for(:title, 'メーカー - 契約新規登録') %>

<header class="primary-header d-flex align-items-center">
  <h1 class="mb-0">契約新規登録</h1>
</header>

<div class="secondary-header">
</div><!-- .secondary-header -->

<main class="main-contents">
  <%= form_with(model: @vendor_group, url: maker_page_vendor_groups_path, html: { method: :post, class: 'form-default' }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
      <p class="mb-1"><%= f.label :layer %></p>
      <div class="select-wrap half">
        <%= f.select :layer, VendorGroup.layers_i18n.invert.to_a, {}, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <p><%= f.label :vendor_id %></p>
      <div class="select-wrap">
        <%= f.collection_select :vendor_id, @current_maker_group.partners.all, :id, :name, {include_blank: '---'},{class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <p><%= f.label :product_id %></p>
      <div class="select-wrap">
        <%= f.collection_select :product_id, @current_maker_group.products.all, :id, :name, {include_blank: '---'},{class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <p class="mb-1"><%= f.label :contract_type %></p>
      <div class="select-wrap half">
        <%= f.select :contract_type, VendorGroup.contract_types_i18n.invert.to_a, {}, {class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <p><%= f.label :price %></p>
      <%= f.text_field :price, class: 'form-control' %>
    </div>

    <div class="form-group">
      <p><%= f.label :incentive %></p>
      <%= f.text_field :incentive, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= f.label :maker_memo %>
      <%= f.text_area :maker_memo, class: 'form-control', placeholder: "メーカーのみが閲覧できるメモです".html_safe, rows: 6 %>
    </div>

    <%= f.submit t('common.create'), class: 'btn btn-m default' %>
  <% end %>

</main><!-- .main-contents -->
