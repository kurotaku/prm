<%= render 'shared/error_messages', object: f.object %>

<div class="form-group">
  <p><%= f.label :name %></p>
  <%= f.text_field :name, class: 'form-control', required: true %>
</div>

<div class="form-group">
  <p class="mb-1"><%= f.label :contract_type %></p>
  <div class="select-wrap half">
    <%= f.select :contract_type, Contract.contract_types_i18n.invert.to_a, {}, {class: 'form-control'} %>
  </div>
</div>

<div class="form-group">
  <p><%= f.label :price %></p>
  <%= f.text_field :price, class: 'form-control half' %>
</div>

<div class="form-group">
  <p><%= f.label :contracted_at %></p>
  <%= f.date_field :contracted_at, class: 'form-control half' %>
</div>

<div class="form-group">
  <p><%= f.label :contract_end_at %></p>
  <%= f.date_field :contract_end_at, class: 'form-control half' %>
</div>

<div class="form-group">
  <%= f.label :vendor_memo %>
  <%= f.text_area :vendor_memo, class: 'form-control', placeholder: "ベンダーのみが閲覧できるメモです".html_safe, rows: 6 %>
</div>
