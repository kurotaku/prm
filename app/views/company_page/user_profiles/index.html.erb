<% content_for(:title, '自社名簿') %>

<header class="primary-header d-flex align-items-center">
  <div>
    <h1>社員名簿</h1>
    <p class="mb-0">社員のプロフィールを管理します。</p>
  </div>

  <div class="d-flex ml-auto">
    <%= link_to t('common.new'), new_company_page_user_profile_path, class: 'btn btn-m default before-icon plus' %>
  </div>
</header><!-- .primary-header -->
<div class="secondary-header">
  
</div><!-- .secondary-header -->

<main class="main-contents">
  
  <div class="table-wrap sp-none">
    <table class="border-table">
      <thead>
        <tr>
          <td><%= t('activerecord.attributes.user_profile.name') %></td>
          <td>アカウント開設</td>
          <td><%= t('activerecord.attributes.user_profile.code') %></td>
          <td><%= t('activerecord.attributes.user_profile.phone') %></td>
        </tr>
      </thead>
      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= link_to profile.name, company_page_user_profile_path(uid: profile.uid) %></td>
            <td><%= profile.has_account %></td>
            <td><%= profile.code %></td>
            <td><%= profile.phone %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- .table-wrap -->

</main><!-- .main-contents -->